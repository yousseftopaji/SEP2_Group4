<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="CENTER"
      prefHeight="400.0" prefWidth="600.0">
    <Label text="Booking Details" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TextField fx:id="propertyIdField" promptText="Property ID"/>
    <TextField fx:id="customerNameField" promptText="Customer Name"/>
    <TextField fx:id="bookingDateField" promptText="Booking Date (YYYY-MM-DD)"/>
    <TextArea fx:id="location" promptText="Location"/>
    <Button fx:id="submitButton" text="Submit Booking"/>
</VBox>